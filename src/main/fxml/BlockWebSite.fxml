<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.BlockWebSiteController">
    <children>
        <Pane layoutX="1.0" prefHeight="225.0" prefWidth="650.0">
            <children>
                <Label layoutX="24.0" layoutY="22.0" prefHeight="52.0" prefWidth="235.0" text="Block Websites:">
                    <font>
                        <Font name="Nirmala UI" size="18.0" />
                    </font>
                </Label>
                <Label layoutX="27.0" layoutY="74.0" prefHeight="149.0" prefWidth="597.0" text="If you want to block the website immediately use the immediately option. &#10;If you use the manually option, the website will be blocked in seven days, &#10;if your average daily usage is greater then your input also the daily average &#10;usage of the website in the next seven days.&#10;When using the maually option, input exclusive the URL of the website&#10; you visited.">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
            </children>
        </Pane>
        <Pane layoutX="1.0" layoutY="219.0" prefHeight="225.0" prefWidth="650.0">
            <children>
                <CheckBox fx:id="immediatelyCheckBox" layoutX="108.0" layoutY="24.0" mnemonicParsing="false" prefHeight="27.0" prefWidth="184.0" text="Immediately" textAlignment="CENTER" />
                <Label layoutX="429.0" layoutY="24.0" prefHeight="27.0" prefWidth="107.0" text="Manually" />
                <TextField fx:id="urlField" layoutX="40.0" layoutY="84.0" prefHeight="41.0" prefWidth="549.0" promptText="Website URL" />
                <Button fx:id="submit" layoutX="261.0" layoutY="160.0" mnemonicParsing="false" onAction="#onActionSubmit" prefHeight="27.0" prefWidth="107.0" text="Submit" />
                <TextField fx:id="manuallyField" layoutX="360.0" layoutY="22.0" prefHeight="27.0" prefWidth="59.0" promptText="Hours" />
            </children>
        </Pane>
    </children>
</AnchorPane>
